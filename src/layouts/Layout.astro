---
import "@intergrav/dev.css";
import "../styles/dcskywardmc.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from 'astro:transitions';
const { title, description } = Astro.props;
const { dctheme } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<title>{title} - SkywardMC</title>
		<meta name="description" content={description} />

		<!-- Additional meta tags for SEO -->
		<meta name="robots" content="index, follow" />
		<meta name="author" content="SkywardMC" />
		<link rel="canonical" href={Astro.url.pathname} />

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content={`${title} - SkywardMC`} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.pathname} />
		<meta property="og:image" content="/android-chrome-512x512.png" />

		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={`${title} - SkywardMC`} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="/android-chrome-512x512.png" />

		<!-- Sitemap Link -->
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- View Transitions -->
		<ViewTransitions />
	</head>
	<body transition:animate="none">
		<Header />
		<div transition:animate="slide">
			<h1>{title}</h1>
			<slot />
		</div>
		<Footer />
	</body>
</html>
